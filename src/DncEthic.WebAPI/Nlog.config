<?xml version="1.0" encoding="utf-8" ?>
<!--<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="Logs/nlog-internal.log">-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       autoReload="true"
    >
  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
    <!--控制台彩色打印-->
    <!--<target name="console" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false" layout="${longdate}|${pad:padding=5:inner=${level:uppercase=true}}|${message}" >
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>-->
    <!-- 写入log文本文件 -->
    <!--<target xsi:type="File" name="allfile" fileName="${basedir}/Logs/${date:format=yyyyMM}/nlog-all-${shortdate}.log"
          layout="${longdate}|${event-properties:item=EventId.Id}|${uppercase:${level}}|${logger} ${newline}${message} ${exception} ${newline}" />-->
    <target xsi:type="file" name="ownFile-web" fileName="${specialfolder:folder=ApplicationData}/Logs/${date:format=yyyyMM}/nlog-own-${shortdate}.log"
              layout="${longdate}|${event-properties:item=EventId.Id}|${uppercase:${level}}|${logger} ${newline}${message} ${exception} ${newline} --- |url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
    <target name="Debug" xsi:type="File" fileName="${basedir}/Logs/${date:format=yyyyMM}/${shortdate}-Debug.log" layout="----------------日志记录开始----------------${newline}【日志时间】：${longdate} ${newline}【日志级别】：${level:uppercase=true}${newline}【相关信息】${newline}${message}${newline}${newline}${newline}"  />
    <target name="Warn"  xsi:type="File" fileName="${basedir}/Logs/${date:format=yyyyMM}/${shortdate}-Warn.log"   layout="----------------日志记录开始----------------${newline}【日志时间】：${longdate} ${newline}【日志级别】：${level:uppercase=true}${newline}【相关信息】${newline}${message}${newline}${newline}${newline}"  />
    <target name="Error" xsi:type="File" fileName="${basedir}/Logs/${date:format=yyyyMM}/${shortdate}-Error.log" layout="----------------日志记录开始----------------${newline}【日志时间】：${longdate} ${newline}【日志级别】：${level:uppercase=true}${newline}【相关信息】${newline}${message}${newline}${newline}${newline}"  />
    <target name="Info"  xsi:type="File" fileName="${basedir}/Logs/${date:format=yyyyMM}/${shortdate}-Info.log"   layout="----------------日志记录开始----------------${newline}【日志时间】：${longdate} ${newline}【日志级别】：${level:uppercase=true}${newline}【相关信息】${newline}${message}${newline}${newline}${newline}"  />
    <target name="Fatal" xsi:type="File" fileName="${basedir}/Logs/${date:format=yyyyMM}/${shortdate}-Fatal.log" layout="----------------日志记录开始----------------${newline}【日志时间】：${longdate} ${newline}【日志级别】：${level:uppercase=true}${newline}【相关信息】${newline}${message}${newline}${newline}${newline}"  />
    <target name="Trace" xsi:type="File" fileName="${basedir}/Logs/${date:format=yyyyMM}/${shortdate}-Trace.log" layout="----------------日志记录开始----------------${newline}【日志时间】：${longdate} ${newline}【日志级别】：${level:uppercase=true}${newline}【相关信息】${newline}${message}${newline}${newline}${newline}"  />
    <target xsi:type="Null" name="blackhole" />
    <!--写入数据库-->
    <target xsi:type="Database" name="database"  dbProvider="MySql.Data.MySqlClient.MySqlConnection, MySql.Data"  connectionString="server=localhost;user id=root;pwd=123456;database=dncethic;SslMode = none;Charset=utf8">
    <!--<target xsi:type="Database" name="database">
      <dbProvider>${var:dbProvider}</dbProvider>
      <connectionString>${var:dbConnection}</connectionString>-->
      <!--<dbProvider>MySql.Data.MySqlClient.MySqlConnection, MySql.Data</dbProvider>
     <connectionString>erver=localhost;user id=root;pwd=123456;database=dncethic;SslMode = none;Charset=utf8</connectionString>-->
      <commandText>
        insert into sys_log (S_Id,Application,Level,OperatingTime,IpAddress,OperateUser,Logger,CallSite,RequestUrl,Action,Message,Exception)
        values (@S_Id,@application,@level,@operatingtime,@operatingaddress,@operateuser,@logger,@callSite,@requesturl,@action,@message,@exception);
      </commandText>
      <parameter name="@S_Id" layout="${guid}"  />
      <parameter name="@application" layout="DncEthic" />
      <parameter name="@level" layout="${level}" />
      <parameter name="@operatingtime" layout="${date}" />
      <parameter name="@operatingaddress" layout="${aspnet-Request-IP}" />
      <parameter name="@operateuser" layout="System" />
      <parameter name="@logger" layout="${logger}" />
      <parameter name="@callSite" layout="${callsite}" />
      <parameter name="@requesturl" layout="${aspnet-request-url}" />
      <parameter name="@action" layout="${aspnet-mvc-action}" />
      <parameter name="@message" layout="${message}" />
      <parameter name="@exception" layout="${exception:tostring}" />
    </target>
  </targets>

  <rules>
    <!-- add your logging rules here -->
   <!--<logger name="*" minlevel="Debug" writeTo="console" />-->
    <!-- <logger name="*" minlevel="Info" writeTo="db" />
    <logger name="*" minlevel="Debug" writeTo="file" />-->
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
    <!--<logger name="*" minlevel="Error" writeTo="allfile" />-->
    <!--Skip Microsoft logs and so log only own logs-->
    <!--<logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />-->
    <!--<logger name="*" minlevel="Trace" writeTo="ownFile-web" />-->
    <logger name="*" minlevel="Trace" writeTo="database" />
    <logger name="*" levels="Info" writeTo="Info" />
    <logger name="*" levels="Warn" writeTo="Warn" />
    <logger name="*" levels="Trace" writeTo="Trace" />
    <logger name="*" levels="Debug" writeTo="Debug" />
    <logger name="*" levels="Error" writeTo="Error" />
    <logger name="*" levels="Fatal" writeTo="Fatal" />
  </rules>
</nlog>
